{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "jest-environment-jsdom", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": ["src", "context", "globals.d.ts"],
  "exclude": [
    "node_modules",
    "components/*/.stories.ts",
    "build",
    ".husky",
    "components/*/__test__/*/*.test.tsx"
  ]
}
